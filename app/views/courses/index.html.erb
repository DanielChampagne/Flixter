<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Learn something today</h1>
  <hr />

  <% @courses.each do |course| %>
    <h2 class="text-center">
      <%= link_to course.title, course_path(course) %> 
    </h2>
    <div class="row justify-content-center">
      <div class= "col-sm-4">
        <%= image_tag course.image.to_s, class: 'img-fluid' %>
      </div>
    </div>
    <br />
    <div class="row justify-content-center">
      <div class="col-sm-6 text-center mb-2">
        <%= course.description %>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-sm-4 text-center">
        <%= link_to 'More Details...', course_path(course), class: 'btn btn-primary btn-large' %>
      </div>
    </div>
    <hr> 
    <br class="clr" />
  <% end %>

</div>